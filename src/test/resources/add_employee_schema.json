{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Employee",
    "description": "A employee from X company",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer"
            },
            "email": {
                "type": "string"
            },
            "password_hash": {
                "type": "string"
            },
            "full_name": {
                "type": "string"
            },
            "department": {
                "type": "string"
            },
            "title": {
                "type": "string"
            },
            "create_at": {
                "type": "string"
            },
            "update_at": {
                "type": "string"
            }
        },
        "required": [
            "id",
            "email",
            "password_hash",
            "full_name",
            "department",
            "title",
            "create_at",
            "update_at"
        ]
    }
}